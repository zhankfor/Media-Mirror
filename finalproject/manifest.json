{

    "manifest_version": 2,
    
    "name": "Media Mirror",
    "description": "Records and displays your online news sources",
    "version": "0.0.1.1",
    
    "permissions": 
    [
        "tabs",
        "storage",
        "http://*/*",
        "http://*.google.com/"
    ],
    
    "background": {
        "page": "background.html",
        "persistent": true
    },
    
    "browser_action":
    {
        "default_icon": "icon.png",
        "default_popup": "news.html"
    }
}
